<div class="form-style">
<div class="required-form">
  <%= bootstrap_form_for(@event, data: { controller: "places", action: "google-maps-callback@window->places#initMap" }) do |f| %>
    <%= f.text_field :name, placeholder: 'Enter the name of the event here', label: "What is the name of this event?" %>
    <%= f.text_area :description, placeholder: 'Enter the description of the event here', label: "Tell us about the event.", :class => "tinymce" %>
    <%= tinymce %>
        <%= f.file_field :event_image, label: "Upload the event image", help: "Upload a horizontal image of event flyer, 1920 X 1080 pixels works best!" %>
    <%= f.text_field :address, data: { places_target: "field" }, label: "Where is this event taking place?", required: true %>
    <%= f.collection_select :event_type_id, EventType.all, :id, :name, label: "What type of event is this?" %>
    <%= f.select :dance_style_ids, DanceStyle.all.pluck(:name, :id), 
          { label: "What are the main dance styles that will be represented at this event?", 
             help: "Select the main dance styles that will be represented in the classes and/or socials." }, 
          { multiple: true, id: "select-dancestyle", placeholder: "Enter a name of a dance style to begin searching..." } %>
     <%= f.collection_select :event_frequency_id, EventFrequency.all, :id, :name, label: "How often will this event occur?" %>
    <%= f.select :artist_ids, Artist.all.pluck(:name, :id), 
          { label: "Which artists have been booked for this event?", 
             help: "Select the artists that will be represented in the classes and/or socials."}, 
          { multiple: true, id: "select-artist", placeholder: "Enter a name of an artist to begin searching..." } %>
    <%= f.date_field :event_start_date, wrapper: { class: "date"}, label: "What date does this event start?", required: true %>
    </div>
    
    <%= f.date_field :event_end_date, wrapper: { class: "date"}, label: "What date does this event end?", help: "Enter the same date if this is a same day event.", placeholder: "MM/DD/YYYY" %>
    <%= f.text_field :website_url, label: "Event Website Link", placeholder: 'http://www.yourevent.com', label: "Does this event have a website?", help: "If the event has a website, enter the link here." %>
    <%= f.text_field :ticket_url, label: "Passes Link", placeholder: 'http://yourticketsite.com/yourevent', label: "What is the link to purchase passes?", help: "If the event has a direct link to purchase passes, enter the link here." %>
    <%= f.text_field :facebook_url, label: "Facebook Event Link", placeholder: 'https://www.facebook.com/events/12356/', label: "Is this event on Facebook?", help: "If the event has a Facebook event, enter the link here." %>
    <%= f.text_field :instagram_url, label: "Instgram Link", placeholder: 'http://www.instagram.com/yourevent', label: "Does this event have an Instagram account?", help: "If the event has an Instagram account, enter the link here." %>
    <%= f.hidden_field :event_status_id, value: 2 %>
    <%= f.submit "Suggest New Event", class: "btn btn-success" %>
  <% end %>
</div>