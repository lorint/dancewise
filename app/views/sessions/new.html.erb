<div class="container">
<div class="form-style">
  <h1>Log in</h1>

  <%= bootstrap_form_with(scope: :session, url: login_path, local: true) do |f| %>
    <p>
      <%= f.email_field :email, placeholder: "Enter your email address" %>
    </p>

      <p>
      <%= f.password_field :password, placeholder: "Enter your password" %>
    </p>

    <p>
      <%= f.submit "Log in" %>
    </p>
  <% end %>


   <br>
    <br>
<div>
  <h5>If you don't have an account already, create a free account with the button below! </h5>
      <br>
    <div class="btn btn-success">
          <%= link_to 'Create a free account!', signup_path, :class => "btn text-light" %>
    </div>
</div>
</div>
</div>
