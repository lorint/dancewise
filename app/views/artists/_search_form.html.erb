<%= search_form_for @q,
    data: { controller: "places" } do |f| %>

     <%= f.label "Artist name", class: "form-label" %>
    <%= f.search_field :name_cont, placeholder: "Any name", class: "form-control" %>
     <br>
    <%= f.label "Dance style", class: "form-label" %>
    <%= f.select :dance_styles_id_eq, DanceStyle.all.pluck(:name, :id), { :include_blank => "All dance styles" }, { class: "form-select", id: "select-dancestyle", placeholder: "Any dance style" } %>
    <br>
    <%= f.submit "Search!", class: "btn btn-dark btn-lg" %>
<% end %>